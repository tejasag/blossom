<style>
  .so {
    position: relative;
  }
  .so:before {
    position: absolute;
    content: "";
    left: 0;
    top: 50%;
    right: 0;
    border-top: 1px solid;
    border-color: black;

    -webkit-transform: rotate(-5deg);
    -moz-transform: rotate(-5deg);
    -ms-transform: rotate(-5deg);
    -o-transform: rotate(-5deg);
    transform: rotate(-5deg);
  }

  .about {
    max-width: 100vw;
    padding: 3rem;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .header {
    font-family: "Cedarville Cursive";
    font-style: normal;
    font-weight: 400;
    font-size: 3rem;
    line-height: 95px;
    color: #594a4e;
  }

  .content {
    font-family: "Proza Libre";
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 30px;
    color: #594a4e;
    display: inline-block;
  }

  .prog {
    font-family: "Nothing You Could Do";
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    vertical-align: top;
  }

  .up {
    height: clamp(10px, 15px, 15px);
    display: inline-block;
    margin-top: 1.5rem;
  }

  .prog_content {
    transform: matrix(0.99, -0.15, 0.14, 0.99, 0, 0);
    font-size: clamp(15px, 20px, 100px);
  }

  @media screen and (max-width: 1000px) {
    .about {
      flex-direction: column;
      padding: 1rem;
      padding-top: 2rem;
    }

    .header {
      font-size: 1.5rem;
      line-height: 50px;
      margin-top: 5rem;
      margin-bottom: none;
      align-items: center;
    }

    .content {
      font-size: 18px;
      line-height: 20px;
      max-width: 80vw;
    }
  }
</style>
