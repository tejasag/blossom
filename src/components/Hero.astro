---
import Avatar from "./Avatar.astro";
---

<!-- Hero Section  -->
<div class="flex flex-row justify-between items-center">
  <!-- Headings -->
  <div class="flex flex-col ml-[4em] h-screen justify-center">
    <span class="header text-5xl">Hey there! ðŸ‘‹ I'm</span>
    <span class="header text-9xl">Tejas Agarwal</span>
    <div class="flex flex-row items-center h-auto mt-[.25em]">
      <img src="Arrow.svg" alt="" class="arrow mt-[1.75em]" />
      <span class="sub text-4xl w-[17em] m-3"
        >high school sophomore hacking his way through life</span
      >
    </div>
  </div>

  <!-- Illustration -->
  <Avatar cls="h-[30em] m-10 mr-[10em]" />

