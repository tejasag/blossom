---
import Avatar from "./Avatar.astro";
---

<!-- Hero Section  -->
<div class="hero">
  <!-- Headings -->
  <div class="header_box">
    <span class="header text-2xl sm:text-5xl">Hey there! ðŸ‘‹ I'm</span>
    <span class="header text-7xl sm:text-9xl">Tejas Agarwal</span>
    <div class="flex flex-row items-center h-auto mt-[.25em]">
      <img
        src="Arrow.svg"
        alt=""
        class="sm:w-[6em] w-[4em] ml-[.5em] sm:ml-[6em] mt-[1.75em]"
      />
      <span class="sub text-xl sm:text-4xl w-[12em] sm:w-[17em] m-3"
        >high school graduate hacking his way through life</span
      >
    </div>
  </div>

  <!-- Illustration -->
  <Avatar type="home" />
</div>

<style>
  .hero {
    display: flex;
    flex-direction: row;
    height: 100vh;
    max-width: 100vw;
    justify-content: space-between;
    align-items: center;
  }

  .header_box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 4em;
  }

  .header {
    font-family: "Cormorant Upright";
    color: #33272a;
  }

  .sub {
    font-family: "Nothing You Could Do";
    color: #33272a;
    transform: rotate(-8.7deg);
  }

  @media screen and (max-width: 1000px) {
    .hero {
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }

    .header_box {
      margin: 2em;
      margin-top: 2em;
    }
  }
</style>
