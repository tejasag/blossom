---
const { cls } = Astro.props;

const SVGs = {
  home: "Avatar.svg",
  about: "AboutAvatar.svg",
};
---

<img src={SVGs[cls]} alt="" class={cls} />

<style>
  .home {
    height: clamp(20rem, 30rem, 30em);
    margin: 2.5rem;
    margin-right: 10em;
  }

  .about {
    height: clamp(30rem, 35em, 35em);
    margin: 2.5rem;
    margin-right: 5em;
  }

  @media screen and (max-width: 600px) {
    .home {
      position: absolute;
      left: calc(50% - 7em);
      margin: 0;
      height: 20rem;
      bottom: 0;
    }
    .about {
      height: 30rem;
    }
  }
</style>
