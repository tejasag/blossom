  <img
    src="white_circle.svg"
    alt=""
    class="absolute right-0 bottom-0 -z-10 w-[48rem]"
  />
  <img
    src="pink_circle.svg"
    alt=""
    class="absolute top-0 right-0 -z-[5] w-[35rem]"
  />
