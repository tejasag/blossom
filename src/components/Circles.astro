<img src="white_circle.svg" alt="" id="white_circ" class="white_circle" />
<img src="pink_circle.svg" alt="" class="pink_circle" />

<script>
  window.onscroll = (_) => {
    const ele = document.getElementById("white_circ") as HTMLImageElement;
    if (window.scrollY > (3 / 4) * window.innerHeight) {
      ele.classList.add("green_circle");
      ele.src = "green_circle.svg";
    } else {
      ele.classList.remove("green_circle");
      ele.src = "white_circle.svg";
    }
  };
</script>

<style>
  .circles_content {
    width: 100%;
    overflow-x: hidden;
  }

  .white_circle {
    position: absolute;
    right: -90px;
    top: 200px;
    z-index: -10;
    width: 48rem;
    transition: 2s all ease;
  }

  .white_circle.green_circle {
    right: 20vw;
    top: 100vh;
    width: calc(100vh + 30px);
  }

  .pink_circle {
    position: absolute;
    right: -100px;
    top: -200px;
    z-index: -5;
    width: 42rem;
  }

  @media screen and (max-width: 1000px) {
    .circles_content {
      height: 100vh;
      width: 100vw;
    }

    .white_circle {
      width: 30rem;
      left: 24.87%;
      position: absolute;

      top: 55vh;
      transition: 1s all ease;
    }

    .white_circle.green_circle {
      top: 150vh;
      left: 0;
      width: 2000px;
    }

    .pink_circle {
      position: absolute;
      width: 25rem;
      left: -30.87%;
      top: 50vh;
    }
  }
</style>
