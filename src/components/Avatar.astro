---
const { type } = Astro.props;

const SVGs = {
  home: "Avatar.svg",
  about: "AboutAvatar.svg",
};
---

<img src={SVGs[type]} alt="" class={type} />

<style>
  .home {
    height: clamp(10rem, 20rem, 30em);
    margin: 2.5rem;
    margin-right: 10em;
  }

  .about {
    height: clamp(30rem, 35em, 35em);
    margin: 2.5rem;
    margin-right: 5em;
  }

  @media screen and (max-width: 600px) {
    .home {
      margin: auto;
    }

    .about {
      height: 30rem;
    }
  }
</style>
