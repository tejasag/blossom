<style>
  .header {
    font-family: "Cormorant Upright";
    color: #33272a;
  }

  .sub {
    font-family: "Nothing You Could Do";
    color: #33272a;
    transform: rotate(-8.7deg);
  }

  .arrow {
    width: 6em;
    margin-left: 6em;
  }
</style>
